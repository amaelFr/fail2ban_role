{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "fail2ban_common",
  "description": "fail2ban jails configuration schema",
  "definitions": {
    "fail2ban_properties": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^.*$": {
          "anyOf": [
            {
              "type": [
                "string",
                "number"
              ]
            },
            {
              "type": "array",
              "items": {
                "type": [
                  "string",
                  "number"
                ]
              }
            }
          ]
        }
      }
    }
  }
}